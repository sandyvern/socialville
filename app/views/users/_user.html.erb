<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
  <div class="row bootstrap snippets"> 
    <div class="col-md-9 col-sm-7"> 
      <h2>          
        <%= link_to user_path(user.username) do %>
          <%= user.username %>
        <% end %>
      </h2> 
    </div> 
  </div>
  <div class="member-entry"> 
    <a href="#" class="member-img"> 
      <%= link_to user_path(user.username) do %>
      <%= image_tag user.image.url(:medium), class: "img-circle" %> 
      <% end %>
         
    </a> 
    <div class="member-details"> 
      <h4> 
  
      </h4> 
      <div class="row info-list"> 
        <div class="col-sm-4"> 
          <i class="fa fa-heart"></i>
          <% if current_user %>
            <%= action_buttons(user) %>
          <% end %>
        </div> 


            <div class="clear"></div> 
            <div class="col-sm-4"> 
                <i class="fa fa-location-arrow"></i> 
                <%#= user.location %>
                <%= user.location_model %>
            </div>
            
            <div class="col-sm-4"> 
                <i class="fa fa-envelope"></i>
                <%= user.alt_email %>
                <%#= user.email_model %> 
            </div>
            
            <div class="col-sm-4"> 
                <i class="fa fa-birthday-cake"></i> 
                <%#= user.age.to_time.strftime('%B %e, %Y') %>
                <%= user.birthday_model %> 
            </div> 
            
            <div class="col-sm-4"> 
                <i class="fa fa-twitter-square"></i>
                <%#= link_to 'Twitter Profile', user.twitter, target: '_blank' %>
                <%= user.twitter_model %>
            </div>
            
            <div class="col-sm-4"> 
                <i class="fa fa-facebook"></i>
                <%= user.facebook_model %>
                
                <%#= link_to user.facebook_model, user.facebook_model, target: '_blank' %> 
            </div>
            
            <div class="col-sm-4"> 
                <i class="fa fa-group"></i> 
                <%= user.username %> is
                <%= distance_of_time_in_words_to_now(user.age, only: :years) %> old
            </div>
            
            <div class="col-sm-4"> 
                <i class="fa fa-youtube"></i>
                <%=  user.youtube_model %>
                <%#= link_to "My YouTube Channel", user.youtube_model, target: "_blank" %>
            </div>
            
            <div class="col-sm-4"> 
              <i class="fa fa-calendar-check-o"></i> 
              Member Since: <%= user.created_at.to_time.strftime('%B %e, %Y') %>
            </div> 
    </div> 
  </div> 
</div>

</div>
</div>
<hr>